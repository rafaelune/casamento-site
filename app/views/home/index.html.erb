<div id="rsvp">
	<div class="container">
		<div class="row">
			<%= content_tag :h2, 'R.S.V.P.' %>
			<%= content_tag :p, t('rsvp_presence') %>
			<%= content_tag :p, t('rsvp_confirm_presence') %>
			<div id="rsvp-error-msg" class="alert alert-danger hidden" role="alert">
				<%= raw t('rsvp_error_message') %>
			</div>
			<div id="rsvp-success-msg" class="alert alert-success hidden" role="alert">
				<%= raw t('rsvp_success_message') %>
			</div>
			<%= form_tag(confirmation_path, :remote => true, :class => "form") do %>
				<div class="row">
  					<div class="col-xs-12">
						<%= text_field_tag "invitation_name", nil, :placeholder => t('invitation_name'), :class => "form-control" %>
					</div>
				</div>
				<div class="row">
  					<div class="col-xs-8">
  						<%= email_field_tag "guest_email", nil, :placeholder => t('guest_email'), :class => "form-control" %>
  					</div>
  					<div class="col-xs-4">
						<%= number_field_tag "guest_number", nil, :placeholder => t('guest_number'), :class => "form-control" %>
					</div>
				</div>
				<div class="row">
  					<div class="col-xs-8">
						<%= telephone_field_tag "guest_phone", nil, :placeholder => t('guest_phone'), :class => "form-control" %>
					</div>
				</div>
				<div class="row">
  					<div class="col-xs-12">
						<%= text_area_tag "guest_comment", nil, :placeholder => t('guest_comment'), :class => "form-control" %>
					</div>
				</div>
				<div class="row">
					<%= submit_tag t('send'), :class => "btn btn-default btn-lg" %>
				</div>
			<% end %>
			<%= content_tag :h4, t('thank_you') %>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function() {
		$('form').on('ajax:success', function() {
			$('#rsvp-error-msg').addClass('hidden');
			$('#rsvp-success-msg').removeClass('hidden');
		}).on('ajax:error', function() {
			$('#rsvp-error-msg').removeClass('hidden');
			$('#rsvp-success-msg').addClass('hidden');
		});
	});
</script>