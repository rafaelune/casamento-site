<div class="navbar navbar-inverse navbar-fixed-top top-menu" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#home">Home</a></li>
        <li><%= link_to t('about'), '#about' %></li>
        <li><%= link_to t('ceremony'), '#ceremony' %></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div id="home" name="home">
	<div class="container">
		<div class="row">
			<h1><span>Mariana</span> & <span>Rafael</span></h1>
		</div>
		<div class="row images">
			<span class="her pile"> </span>
			<span class="him pile"> </span>
		</div>
	</div>
</div><!-- /#home -->

<div id="about" class="bg-white-area">
	<div class="container">
		<div class="row">
			<%= content_tag :h2, t('are_getting_married') %>
		</div>
		<div class="row date">
			19.09.2015
		</div>
		<div class="row">
			<div class="countdown-timer">
				<span><%= raw t('in') %> <span id="timer"></span></span>
			</div>
		</div>
		<div id="one-one" class="row">
			<div class="two">
				<div class="she">
					<%= raw t('her_description') %>
				</div>
				<div class="he">
					<%= raw t('his_description') %>
				</div>
			</div>
		</div>
		<div class="row they">
			<%= raw t('their_story') %>
		</div>
	</div>
</div>

<div id="ceremony">
</div>

<div class="bg-white-area">
	<div id="ceremony-info">
		<div id="ceremony-address">
			<div class="address">
				<img height="300" width="300" alt="Igreja" src="http://www.alpendreeventos.com.br/wp/wp-content/uploads/2013/11/081.jpg">
				<%= content_tag :h3, t('alpendre_site') %>
				<%= content_tag :p, t('site_address') %>
				<%= link_to t('show_in_google_maps'), '#' %>
			</div>

			<div class="ceremony-reception">
				<h4>Cerimônia</h4>
				<p>17h</p>
			</div>

			<div class="ceremony-reception">
				<h4>Recepção</h4>
				<p>18h</p>
			</div>
		</div>
	</div>
</div>